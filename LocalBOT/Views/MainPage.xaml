<Page
    x:Class="LocalBOT.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Left">
        <InfoBar Name="InfoBar" IsOpen="False" />


        <TextBox Name="txtServerIP" Width="300" Header="Server :" Text="ws://127.0.0.1:4455" PlaceholderText="ws://127.0.0.1:4455" Margin="0,0,0,10"/>
        <PasswordBox Name="txtServerPassword" Width="300" Header="Password:" PlaceholderText="Enter your password" Margin="0,0,0,10"/>
        <Button Name="btnConnect" Content="Connect" Click="Button_ClickAsync" Margin="0,0,0,0"/>

        <TextBlock Name="OBSVersion" Text="Version"></TextBlock>
        <TextBlock Name="OBSWSVersion" Text="Version"></TextBlock>

        
        <ToggleButton Name="togVirtualCam" Click="Button_VirtualCamStart_Click" Content="Start Virtual Cam" />

        <TextBlock Name="lblVirtualCamStatus" Text="?????"></TextBlock>
        
        <ToggleSwitch/>
    </StackPanel>


</Page>
