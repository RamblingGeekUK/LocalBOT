<Page
    x:Class="App4.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel HorizontalAlignment="Left">
        <InfoBar x:ConnectionId='2' Name="InfoBar" IsOpen="False" />
       

        <TextBox x:ConnectionId='3' Name="txtServerIP" Width="300" Header="Server :" PlaceholderText="ws://127.0.0.1:4455" Margin="0,0,0,10"/>
        <PasswordBox x:ConnectionId='4' Name="txtServerPassword" Width="300" Header="Password:" PlaceholderText="Enter your password" Margin="0,0,0,10"/>
        <Button x:ConnectionId='5' Name="btnConnect" Content="Connect"                           Margin="0,0,0,0"/>

        <TextBlock x:ConnectionId='6' Name="Version" Text="Version"></TextBlock>
    </StackPanel>

    
</Page>

